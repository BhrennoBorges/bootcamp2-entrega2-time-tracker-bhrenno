{
  "manifest_version": 3,
  "name": "Bootcamp Helper — Site Time Tracker",
  "version": "1.0.0",
  "description": "Cronometra quanto tempo você passa em cada site, mostra um painel flutuante e um resumo no popup.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Site Time Tracker",
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/content/tracker.js"
      ],
      "css": [
        "src/content/tracker.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "src/options/options.html"
}